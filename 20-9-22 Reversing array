#include <stdio.h>

int main() {
    
    int i, arr [] = {1,2,3,4,5};
   
    for(i=0;i<=4;i++){
    
        if(i<4){
         printf("%d,",arr[i]);
        }
        
        else{
         printf("%d.",arr[i]);
        }
    }

    printf("\n");
    
    for(i=4;i>=0;i--){
        
        if(i>1){
         printf("%d,",arr[i]);
        } 
        else{
         printf("%d.",arr[i]);
        }
    }
    
    return 0;
}


-----------------OUTPUT-----------------
1,2,3,4,5.
5,4,3,2.1.

#include <stdio.h>

int main() {
  int arr[5],mini=1000;
  
  for(int i=0; i<5;i++){
    printf("\nEnter the %dth element to array : ",i+1);
    scanf("%d",&arr[i]);
  }
  
  for(int i=0; i<5;i++){
    printf("\n%dth element of array is : %d ",i+1,arr[i]);
  }
  
  for(int i=0; i<5; i++){
      
      if(mini>=arr[i]){
          mini = arr[i];
      }
  }
  
  printf("\n%d is the minimum element of Array\n",mini);
  
    return 0;
}


-------------------------------------------------

Enter the 1th element to array : 5
Enter the 2th element to array : 6
Enter the 3th element to array : 7
Enter the 4th element to array : 8
Enter the 5th element to array : 5
1th element of array is : 5 
2th element of array is : 6 
3th element of array is : 7 
4th element of array is : 8 
5th element of array is : 5 
5 is the minimum element of Array
